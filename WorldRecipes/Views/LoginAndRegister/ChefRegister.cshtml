@model User
@{
    Layout = "~/Views/Shared/_LoginAndRegisterLayout.cshtml";
}
<div class="half">
    <div class="bg order-1 order-md-2" style="background-image: url('images/about.jpg');"></div>
    <div class="contents order-2 order-md-1">

        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-6">
                    <div class="form-block">
                        <div class="text-center mb-5">
                            <h3>Welcome To <strong>WORLD`S RECIPES</strong></h3>
                            <!-- <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p> -->
                        </div>
                        <form asp-action="ChefRegister" method="post" enctype="multipart/form-data">

                            <div class="form-group ">
                                <label for="password">First Name </label>
                                <input asp-for="Fname" class="form-control" placeholder="First Name" id="password">
                            </div>
                            <div class="form-group ">
                                <label for="password">Last Name</label>
                                <input asp-for="Lname" class="form-control" placeholder="Last Name" id="password">
                            </div>
                            <div class="form-group ">
                                <label for="password">E-mail</label>
                                <input asp-for="Email" class="form-control" placeholder="Your Email" id="password">
                            </div>
                            <div class="form-group ">
                                <label asp-for="ImageFile" class="control-label"></label>
                                <input asp-for="ImageFile" class="form-control" />

                            </div>
                            <div class="form-group ">
                                <label for="username">User Name</label>
                                <input name="userName" type="text" class="form-control" placeholder="User Name" id="username">
                            </div>
                            <div class="form-group ">
                                <label for="password">Password</label>
                                <input name="Password" type="password" class="form-control" placeholder="Your Password" id="password">
                            </div>
                            <!-- Registration.cshtml -->
                            <div>
                                <input type="submit" value="Register" class="btn btn-block btn-primary">
                            </div>
                            <div class="signup-image">

                                <a asp-action="Login" class="signup-image-link">I am already member</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
